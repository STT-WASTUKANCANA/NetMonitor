# Configuration file for the Network Monitoring Script
# This file should be sourced before running the monitoring script

# API Configuration
API_BASE_URL="http://localhost:8000"
API_TOKEN=""

# Monitoring Settings
MONITOR_INTERVAL=300  # Seconds between monitoring cycles (5 minutes)
PING_TIMEOUT=2       # Timeout for ping operations in seconds
HTTP_TIMEOUT=5        # Timeout for HTTP requests in seconds

# Logging Configuration
LOG_FILE="/var/log/network-monitor.log"
LOG_LEVEL="INFO"

# Device Configuration
MAX_CONCURRENT_CHECKS=10  # Maximum number of devices to check simultaneously

# Notification Settings (Future Implementation)
EMAIL_ENABLED=false
EMAIL_SMTP_SERVER=""
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=""
EMAIL_PASSWORD=""
EMAIL_FROM="monitor@sttwastukancana.ac.id"
EMAIL_TO="admin@sttwastukancana.ac.id"